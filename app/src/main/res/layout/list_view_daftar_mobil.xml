<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_biru_nom"
        android:weightSum="900"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="600"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_tipe_kendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tipe Kendaraan"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/text_harga_sewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_horizontal"
                android:text="Rp. 250.000,00/Hari"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1000"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_merk_kendaraan"
                    android:layout_width="0dp"
                    android:layout_weight="700"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Tamia"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_ukuran_mesin"
                    android:layout_width="0dp"
                    android:layout_weight="300"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="1500 CC"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1000"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_transmisi"
                    android:layout_width="0dp"
                    android:layout_weight="700"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="automatic"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_tahun_produksi"
                    android:layout_width="0dp"
                    android:layout_weight="300"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="2020"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_upload"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="0dp"
            android:layout_weight="297"
            android:layout_height="100dp"
            tools:srcCompat="@drawable/default_image1" />

    </LinearLayout>


</androidx.cardview.widget.CardView>