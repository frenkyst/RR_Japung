<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_admin.home.PemesananKendaraanFragment">

    <ScrollView
        android:background="@color/colorPuteh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Space
                android:layout_width="10px"
                android:layout_height="50px" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/mobildefault" />

            <TextView
                android:id="@+id/textview_harga_sewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 250.000,00"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/textview_merk_dan_tipe_kendaraan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda Revo"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="100"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_kuning"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_merk_kendaraan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Honda"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <View
                            android:background="@drawable/border_kuning"
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <TextView
                            android:id="@+id/textview_transmisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automatic"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <View
                            android:background="@drawable/border_kuning"
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <TextView
                            android:id="@+id/textview_mesin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bensin"
                            android:padding="5dp"
                            android:textSize="18dp"/>

                    </LinearLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_kuning"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_tahun_produksi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2020 TH"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <View
                            android:background="@drawable/border_kuning"
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <TextView
                            android:id="@+id/textview_ukuran_mesin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1500 CC"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <View
                            android:background="@drawable/border_kuning"
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <TextView
                            android:id="@+id/textview_no_kendaraan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AB 0000 C"
                            android:padding="5dp"
                            android:textSize="18dp"/>

                    </LinearLayout>



                </RelativeLayout>
            </LinearLayout>



            <View
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_kuning"
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Data Pemesan"
                android:padding="10dp"
                android:textSize="24dp"
                android:textStyle="bold"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/edittext_nama_pemesan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_biru_nom"
                    android:paddingLeft="5dp"
                    android:hint="Udin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:text="Nama" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/edittext_no_ktp_pemesan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_biru_nom"
                    android:paddingLeft="5dp"
                    android:inputType="number"
                    android:hint="3306070909990001" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:text="NO KTP" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/edittext_no_telpon_pemesan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_biru_nom"
                    android:paddingLeft="5dp"
                    android:inputType="number"
                    android:hint="08987654321" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:text="NO Telepon/WA" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <EditText
                    android:id="@+id/edittext_alamat_pemesan"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_biru_nom"
                    android:paddingLeft="5dp"
                    android:hint="Jl. Kesepian NO. 0" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:text="Alamat" />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="100"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Pesan"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/textview_pesan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:text="00-00-0000"
                            android:padding="10dp"
                            android:background="@drawable/border_biru_nom" />

                    </LinearLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Kembali"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/textview_kembali"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:text="00-00-0000"
                            android:padding="10dp"
                            android:background="@drawable/border_biru_nom" />

                    </LinearLayout>



                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:weightSum="100"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waktu Pesan"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/textview_jam_pesan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:text="00:00:00"
                            android:padding="10dp"
                            android:background="@drawable/border_biru_nom" />

                    </LinearLayout>




                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paket Supir?"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/textview_paket_supir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:text="Pilih Supir"
                            android:padding="10dp"
                            android:background="@drawable/border_biru_nom" />

                    </LinearLayout>



                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_list_paket_sopir"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Pilih Paket Sopir"
                    android:textAlignment="center" />
                <ProgressBar
                    android:id="@+id/progress_circle_sopir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_pilih_sopir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_layout_paket_sopir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="#e2e2e2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Paket Sopir"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="19sp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1000"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="300"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Nama"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textview_nama_sopir"
                                android:layout_width="0dp"
                                android:layout_weight="700"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Muhamad Solehudin"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1000"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="300"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="No. Telpon"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textview_no_telepon_sopir"
                                android:layout_width="0dp"
                                android:layout_weight="700"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="08987654321"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1000"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="300"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Biaya"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/textview_harga_paket_sopir"
                                android:layout_width="0dp"
                                android:layout_weight="700"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Rp. 150.000,00"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textAlignment="center"
                        android:text="Total Biaya"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/textview_total_harga_sewa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Rp. 1.000.000,00"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="24sp" />

                </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:padding="20dp" >
                <Button
                    android:id="@+id/button_pesan_sekarang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_template"
                    android:text="Pesan Sekarang"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</FrameLayout>